{
  "name": "proControl",
  "version": "0.0.0",
  "description": "HMI Application by Christ Packing Systems",
  "main": "./out/main/index.js",
  "author": "Christ Packing Systems GmbH & Co.KG",
  "homepage": "https://www.christ-ps.com",
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint . --ext .js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "tsc --noEmit -p tsconfig.web.json --composite false",
    "typecheck": "pnpm run typecheck:node && pnpm run typecheck:web",
    "start": "electron-vite preview",
    "dev": "electron-vite dev",
    "bundle": "pnpm run typecheck && electron-vite build",
    "postinstall": "electron-builder install-app-deps",
    "build": "pnpm run bundle && electron-builder --win=portable --config",
    "build:mac": "electron-vite build && electron-builder --mac --config",
    "build:linux": "electron-vite build && electron-builder --linux --config",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "dependencies": {
    "@electron-toolkit/preload": "^1.0.3",
    "@electron-toolkit/utils": "^1.0.2",
    "immer": "^9.0.19",
    "react-error-boundary": "^3.1.4",
    "zustand": "^4.3.2"
  },
  "devDependencies": {
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@electron/notarize": "^1.2.3",
    "@storybook/addon-essentials": "7.0.0-beta.45",
    "@storybook/addon-interactions": "7.0.0-beta.45",
    "@storybook/addon-links": "7.0.0-beta.45",
    "@storybook/blocks": "7.0.0-beta.45",
    "@storybook/react": "7.0.0-beta.45",
    "@storybook/react-vite": "7.0.0-beta.45",
    "@storybook/testing-library": "0.0.14-next.1",
    "@types/node": "16.18.11",
    "@types/react": "18.0.26",
    "@types/react-dom": "18.0.10",
    "@typescript-eslint/eslint-plugin": "^5.48.0",
    "@typescript-eslint/parser": "^5.48.0",
    "@vitejs/plugin-react": "^3.0.1",
    "electron": "^21.3.3",
    "electron-builder": "^23.6.0",
    "electron-vite": "^1.0.17",
    "eslint": "^8.31.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.31.11",
    "prettier": "^2.8.2",
    "prop-types": "15.8.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "storybook": "7.0.0-beta.45",
    "typescript": "^4.9.4",
    "vite": "^4.0.4"
  }
}
